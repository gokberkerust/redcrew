<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:background="@color/colorGreyBackground">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="62dp"
               android:src="@drawable/header"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:gravity="center_horizontal"
                  android:id="@+id/internetResultLayout">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tebrikler!"
                  android:textSize="32sp"
                  android:layout_marginTop="40dp"/>

        <TextView
                android:id="@+id/internetMbAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="500MB"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="kazandınız"
                  android:textSize="32sp"
                  android:layout_marginTop="20dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="12 saat sonra tekrar bekleriz :)"
                  android:textSize="24sp"
                  android:layout_marginTop="60dp"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingStart="12dp"
                  android:paddingEnd="12dp"
                  android:textAlignment="center"
                  android:text="İnternetinizi 07/12/2018 20:00'e kadar keyifle kullanabilirsiniz."
                  android:textSize="18sp"
                  android:layout_marginTop="100dp"/>

    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/smsResultLayout"
                    android:gravity="center_horizontal">


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="VODAFONE HACKHATON "
                  android:textSize="28sp"
                  android:textStyle="bold"
                  android:layout_marginTop="20dp"
                  android:layout_centerHorizontal="true"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/redcrew"
                   android:layout_marginTop="30dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Red Crew"
                  android:textSize="32sp"
                  android:layout_marginTop="350dp"
                  android:layout_centerHorizontal="true"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingStart="12dp"
                  android:paddingEnd="12dp"
                  android:textAlignment="center"
                  android:layout_centerHorizontal="true"
                  android:text="SMS talebiniz işleme alınmıştır."
                  android:textSize="18sp"
                  android:layout_marginTop="500dp"/>

    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:id="@+id/charityResultLayout">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/losev"
                   android:layout_marginTop="40dp"
                   android:layout_gravity="center"
        />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Bağışınız SMS yoluyla gönderilmiştir"
                  android:textSize="32sp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginTop="50dp"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Mutluluk, paylaştıkça artar..."
                  android:layout_gravity="center"
                  android:textSize="24sp"
                  android:layout_marginTop="60dp"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingStart="12dp"
                  android:paddingEnd="12dp"
                  android:layout_gravity="center"
                  android:text="*10TL faturanıza yansıyacaktır."
                  android:textSize="12sp"
                  android:layout_marginTop="170dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:gravity="center_horizontal"
                  android:id="@+id/tariffResultLayout">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/sacma"
                   android:layout_marginTop="40dp"
                   android:layout_gravity="center"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tarife değişikliği talebiniz alınmıştır. \n \n\nTalebiniz tamamlandığında SMS ile bilgilendirileceksiniz.
Talebinizin durumunu 'Tarifem ve paketlerim' menüsündeki 'İşlem Geçmişi' ekranından takip edebilirsiniz.
"
                  android:textColor="@color/colorgrey"
                  android:textSize="18sp"
                  android:paddingStart="16dp"
                  android:textAlignment="center"
                  android:paddingEnd="18dp"
                  android:layout_marginTop="80dp"/>


    </LinearLayout>

</LinearLayout>