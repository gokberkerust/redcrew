<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorGreyBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <SurfaceView
                android:id="@+id/qrReaderPreviewLayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintDimensionRatio="1:1"/>

    </LinearLayout>

    <TextView
            android:text="Karekodu okutmak için kamerayı yaklaştırınız."
            android:textColor="@color/colorgrey"
            android:textSize="16sp"
            android:id="@+id/qrReaderInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:visibility="visible"
            tools:visibility="visible"/>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            <ImageView
                    android:id="@+id/internetImage"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/check"/>

            <TextView
                    android:id="@+id/internettext"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_height="match_parent"
                    android:text="Karekodla interneti kazan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView android:layout_width="40dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/check"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginStart="12dp"
                      android:layout_height="match_parent"
                      android:text="Bağış İşlemleri"
                      android:textSize="14sp"
                      android:textStyle="bold"
                      android:gravity="center"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView android:layout_width="40dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/check"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginStart="12dp"
                      android:layout_height="match_parent"
                      android:text="Oy Gönderme İşlemler"
                      android:textSize="14sp"
                      android:textStyle="bold"
                      android:gravity="center"
            />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            <ImageView android:layout_width="40dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/check"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginStart="12dp"
                      android:layout_height="match_parent"
                      android:text="Tarife İşlemleri"
                      android:textSize="14sp"
                      android:textStyle="bold"
                      android:gravity="center"
            />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>