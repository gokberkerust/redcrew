<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyBackground">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:src="@drawable/header"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:id="@+id/charityLayout"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center_horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/charityName"
                    android:textSize="28sp"
                    android:text="Lösev Vakfına"
                    android:layout_marginTop="50dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/charityAmount"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:text="10 TL"
                    android:layout_marginTop="50dp"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="Bağış yapılacaktır."
                    android:layout_marginTop="50dp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:id="@+id/smsLayout"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center_horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/smsName"
                    android:textSize="28sp"
                    android:text="Hackathon 2018 için"
                    android:layout_marginTop="50dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamName"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:text="RED CREW"
                    android:layout_marginTop="30dp"/>


            <TextView
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="takımına SMS gönderilecektir."
                    android:layout_marginTop="30dp"
                    android:textAlignment="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="SMS bedeli 2.69 TL' dir."
                    android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:id="@+id/tariffLayout"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="18dp"
                android:layout_gravity="center"
                android:gravity="center">

            <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sacmaapproval"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
        <TextView
                android:layout_marginTop="12dp"
                android:text="Talebiniz gerçekleştirilecektir, onaylıyor musunuz?"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:id="@+id/approval_text"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/approvalButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <Button
                    android:id="@+id/approveButton"
                    android:layout_width="280dp"
                    android:layout_height="48dp"
                    android:textColor="@color/colorwhite"
                    android:text="Evet"
                    android:background="@color/colorRed"
                    android:layout_marginBottom="24dp"
            />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>